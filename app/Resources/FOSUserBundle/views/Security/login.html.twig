{% extends "BerkmanSlideshowBundle::layout.html.twig" %}

{% block title %}Spectacle - Login{% endblock %}

{% block body %}
{% if error %}
    <div class="flash error">{{ error }}</div>
{% endif %}

<div class="page">
    <form action="{{ path("fos_user_security_check") }}" method="post">
    <fieldset>
        <legend>Login</legend>
        <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" /><br />

        <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <input type="password" id="password" name="_password" /><br />

        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label><br />
    </fieldset>
        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
    </form>
    <a href="{{ path('fos_user_registration_register') }}">Register Here</a>
    <a href="{{ path('fos_user_resetting_request') }}">Forgot your password?</a>
</div>
{% endblock body %}
