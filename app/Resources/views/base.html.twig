<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
		<link href='http://fonts.googleapis.com/css?family=Cardo&v2' rel='stylesheet' type='text/css'>
		<link href='http://fonts.googleapis.com/css?family=Lato:400,900&v2' rel='stylesheet' type='text/css'>
		{% block stylesheets %}
		{% stylesheets  'css/reset.css'
						'css/style.css'
                        filter='cssrewrite' %}
		<link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
		{% endstylesheets %}
		{% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
		<div id="wrapper">
			<div id="header">
				<a id="home-link" href="{{ path('BerkmanSlideshowBundle_homepage') }}"><h1>Slideshow Generator</h1></a>
				<div id="utility">
					{% block utility %}
					<div>
                        {% if app.session and app.session.get('finder') and app.session.get('finder').selectedImageResults|length > 0 %}
                        <a href="{{ path('slideshow_add_images') }}">
                        {{ app.session.get('finder').selectedImageResults|length }} images
                        </a>
                        {% endif %}

						{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
							{% set username %}
								<a href="{{ path('fos_user_profile_show') }}">
									{{ app.user.username }}
								</a>
							{% endset %}
							{{ 'layout.logged_in_as'|trans({'%username%': username}, 'FOSUserBundle')|raw }} |
							<a href="{{ path('fos_user_security_logout') }}">
								{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
							</a>
						{% else %}
							<a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a> | 
							<a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
						{% endif %}
					</div>
					{% endblock %}
				</div>
			</div>
			
			{% if app.session and app.session.flashes is not empty %}
			{% for flashType, flash in app.session.flashes %}
			<div class="flash {{ flashType }}">
                {{ flash|trans({}, 'FOSUserBundle') }}
			</div>
			{% endfor %}
			{% endif %}

			{% block body %}{% endblock %}
			{% block footer %}
			<div id="footer">
				&copy; 2011 - Presidents and Fellows of Harvard College
			</div>
			{% endblock %}
		</div>
		{% block javascripts %}
		{% javascripts 'js/jquery-1.6.2.js' %}
		<script type="text/javascript" src="{{ asset_url }}"></script>
		{% endjavascripts %}
		{% endblock %}
    </body>
</html>
