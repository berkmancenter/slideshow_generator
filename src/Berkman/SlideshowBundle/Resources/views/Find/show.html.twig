{% extends 'BerkmanSlideshowBundle::layout.html.twig' %}

{% block body %}
{% form_theme form 'BerkmanSlideshowBundle:Form:images.html.twig' %}
<h2>Images ({{ totalResults }} for &quot;{{ keyword }}&quot;)</h2>

<div class="lightWrap">
<form action="{{ path('slideshow_add_images') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form, { 'id': 'slideshow_slides' }) }}
	<input type="hidden" name="page" value="{{ page }}" />
	<input type="hidden" name="keyword" value="{{ keyword }}" />
	<input type="hidden" name="repos" value="{{ repos }}" />
    <p>
		{% if page > 1 %}
		<button type="submit" name="action" value="previous">Previous Page</button>
		{% endif %}
		<button type="submit" name="action" value="next">Next Page</button>
        <button type="submit" name="action" value="finish">Finish</button>
    </p>
</form> 
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('find_index') }}">Back to the list</a>
    </li>
</ul>
{% endblock %}

