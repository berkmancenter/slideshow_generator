<form action="{{ path('finder_index') }}" method="post" {{ form_enctype(finderForm) }}>
    {{ form_errors(finderForm) }}

    <div>
        {{ form_label(finderForm.keyword) }}
        {{ form_errors(finderForm.keyword) }}
        {{ form_widget(finderForm.keyword) }}
        <button type="submit">SEARCH</button>
    </div>

    <div id="finder_catalogs">
    {% for catalog in finderForm.catalogs %}
        <div class="catalog-input">
        <div class="left-input">{{ form_widget(catalog) }}</div>
        {{ form_label(catalog) }}
        {{ form_errors(catalog) }}
        </div>
    {% endfor %}
    </div>

    {{ form_rest(finderForm) }}
</form>
