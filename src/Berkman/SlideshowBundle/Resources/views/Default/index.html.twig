{% extends 'BerkmanSlideshowBundle::layout.html.twig' %}

{% block body %}
<div id="find">
<h2>Find images</h2>
{% include 'BerkmanSlideshowBundle:Find:find.html.twig' %}
</div>

<div id="slideshows">
	<h2>Or, browse slideshows</h2>
	{% for slideshow in slideshows %}
	<div class="slideshow">
		<a href="{{ path('slideshow_show', { 'id': slideshow.id }) }}">
			{% if slideshow.slides[0] is defined %}
			<img src="{{ slideshow.slides[0].image.thumbnailUrl }}" alt="{{ slideshow.id }}" />
			<span class="slideshowInfo">{{ slideshow.name }} by {{ slideshow.person.username }}</span>
			{% endif %}
		</a>
	</div>
	{% endfor %}
</div>
{% endblock %}
