{% extends 'BerkmanSlideshowBundle::layout.html.twig' %}

{% block body %}
<h1>Slideshow</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>                <td>{{ entity.id }}</td>        </tr>
        <tr>
            <th>Name</th>                <td>{{ entity.name }}</td>        </tr>
        <tr>
            <th>Slide_delay</th>                <td>{{ entity.slidedelay }}</td>        </tr>
        <tr>
            <th>Display_info</th>                <td>{{ entity.displayinfo }}</td>        </tr>
    </tbody>
</table>

<ul>
	{% for slide in entity.slides %}
		<li>
			<img src="{{ slide.image.imageUrl }}"/>
			<dl class="metadata">
				{% for key,value in slide.image.metadata %}
				<dt>{{ key }}</dt><dd>{{ value }}</dd>
				{% endfor %}
			</dl>
			<a href="{{ slide.image.recordUrl }}" target="_blank">Go to this record</a>
		</li>
	{% endfor %}
</ul>

<ul class="record_actions">
    <li>
        <a href="{{ path('slideshow') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('slideshow_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
	<li>
		<a href="{{ path('slideshow_slideshow', { 'id': entity.id }) }}">
			Start Slideshow
		</a>
    <li>
        <form action="{{ path('slideshow_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}

